{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ngx-form-m3": {
            "projectType": "library",
            "schematics": { "@schematics/angular:component": { "style": "scss" } },
            "root": "ngx-form-m3",
            "sourceRoot": "ngx-form-m3/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": { "project": "ngx-form-m3/ng-package.json" },
                    "configurations": {
                        "production": { "tsConfig": "ngx-form-m3/tsconfig.lib.prod.json" },
                        "development": { "tsConfig": "ngx-form-m3/tsconfig.lib.json" }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "ngx-form-m3/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                }
            }
        },
        "ngx-form-test": {
            "projectType": "application",
            "schematics": { "@schematics/angular:component": { "style": "scss" } },
            "root": "ngx-form-test",
            "sourceRoot": "ngx-form-test/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": "dist/ngx-form-test",
                        "index": "ngx-form-test/src/index.html",
                        "browser": "ngx-form-test/src/main.ts",
                        "polyfills": ["zone.js"],
                        "tsConfig": "ngx-form-test/tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [{ "glob": "**/*", "input": "ngx-form-test/public" }],
                        "styles": ["ngx-form-test/src/styles.scss"],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                { "type": "initial", "maximumWarning": "500kB", "maximumError": "1MB" },
                                { "type": "anyComponentStyle", "maximumWarning": "4kB", "maximumError": "8kB" }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": { "buildTarget": "ngx-form-test:build:production" },
                        "development": { "buildTarget": "ngx-form-test:build:development" }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": { "builder": "@angular-devkit/build-angular:extract-i18n" },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "tsConfig": "ngx-form-test/tsconfig.spec.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [{ "glob": "**/*", "input": "ngx-form-test/public" }],
                        "styles": ["ngx-form-test/src/styles.scss"],
                        "scripts": []
                    }
                }
            }
        }
    },
    "cli": { "analytics": false }
}
